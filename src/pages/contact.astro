---
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Contact — Hojin Yoon";
const description = "Ways to get in touch with me.";
---

<BaseLayout title={title} description={description} sideBarActiveItemID="contact">
  <div class="min-h-[80vh] px-6 py-12 flex flex-col items-center">
    <h1 class="text-4xl font-bold mb-4 text-center">Contact</h1>
    <p class="opacity-80 mb-10 max-w-2xl text-center">
      Reach out for opportunities, collaborations, or just to connect. Here are the best ways to contact me.
    </p>

    <!-- PROFESSIONAL -->
    <h2 class="text-xl font-semibold mb-3 w-full max-w-5xl">Professional</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-5xl mb-10">
      <!-- Email -->
      <a href="mailto:hojinyoon101@gmail.com" target="_blank" rel="noopener"
         class="card bg-base-200 hover:bg-base-300 transition p-6">
        <div class="flex flex-col items-center text-center space-y-2">
          <!-- mail icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l9 6 9-6M4 6h16a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V8a2 2 0 012-2z" />
          </svg>
          <h3 class="text-xl font-semibold">Email</h3>
          <p class="text-sm opacity-70">hojinyoon101@gmail.com</p>
        </div>
      </a>

      <!-- LinkedIn -->
      <a href="https://www.linkedin.com/in/hojin-yoon-a6378b325" target="_blank" rel="noopener"
         class="card bg-base-200 hover:bg-base-300 transition p-6">
        <div class="flex flex-col items-center text-center space-y-2">
          <!-- LinkedIn icon -->
          <!-- LinkedIn Icon (clean minimal) -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <rect x="2" y="2" width="20" height="20" rx="2" ry="2" stroke-width="2"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 10v7M7 7h.01M12 17v-4.5a2.5 2.5 0 0 1 5 0V17"/>
            </svg>
          <h3 class="text-xl font-semibold">LinkedIn</h3>
          <p class="text-sm opacity-70">Hojin Yoon</p>
        </div>
      </a>

      <!-- GitHub -->
      <a href="https://github.com/hojinyoon" target="_blank" rel="noopener"
         class="card bg-base-200 hover:bg-base-300 transition p-6">
        <div class="flex flex-col items-center text-center space-y-2">
          <!-- GitHub icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 .5a12 12 0 0 0-3.8 23.4c.6.1.8-.3.8-.6V20c-3.3.7-4-1.5-4-1.5-.5-1.3-1.2-1.6-1.2-1.6-1-.7.1-.7.1-.7 1.1.1 1.7 1.2 1.7 1.2 1 .1 1.6.7 2 .5.1-.7.4-1.1.8-1.4-2.7-.3-5.5-1.4-5.5-6.1 0-1.3.5-2.3 1.2-3.2-.1-.3-.5-1.4.1-3 0 0 1-.3 3.2 1.2a11 11 0 0 1 5.8 0C17.6 5.4 18.6 5.7 18.6 5.7c.6 1.6.2 2.7.1 3 .8.9 1.2 1.9 1.2 3.2 0 4.7-2.8 5.8-5.5 6.1.4.3.8 1 .8 2v3c0 .3.2.7.8.6A12 12 0 0 0 12 .5z"/>
          </svg>
          <h3 class="text-xl font-semibold">GitHub</h3>
          <p class="text-sm opacity-70">@hojinyoon</p>
        </div>
      </a>
    </div>

    <!-- MESSAGING -->
    <h2 class="text-xl font-semibold mb-3 w-full max-w-5xl">Messaging</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-5xl mb-10">
      <!-- Discord -->
      <a href="https://discord.com/users/bluu101_" target="_blank" rel="noopener"
         class="card bg-base-200 hover:bg-base-300 transition p-6">
        <div class="flex flex-col items-center text-center space-y-2">
          <!-- Discord icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-black" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20 0H4a4 4 0 0 0-4 4v20l4-4h16a4 4 0 0 0 4-4V4a4 4 0 0 0-4-4zM8.48 14.25c-.9 0-1.63-.82-1.63-1.84s.73-1.84 1.63-1.84c.9 0 1.63.82 1.63 1.84s-.73 1.84-1.63 1.84zm7.04 0c-.9 0-1.63-.82-1.63-1.84s.73-1.84 1.63-1.84c.9 0 1.63.82 1.63 1.84s-.73 1.84-1.63 1.84z" />
          </svg>
          <h3 class="text-xl font-semibold">Discord</h3>
          <p class="text-sm opacity-70">bluu101_</p>
        </div>
      </a>

      <!-- WhatsApp -->
      <a href="https://wa.me/19293235363" target="_blank" rel="noopener"
         class="card bg-base-200 hover:bg-base-300 transition p-6">
        <div class="flex flex-col items-center text-center space-y-2">
          <!-- WhatsApp icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-black" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0A12 12 0 0 0 2.2 18.7L0 24l5.5-2.2A12 12 0 1 0 12 0zm0 21.5a9.4 9.4 0 0 1-4.8-1.3l-.3-.2-3.2 1.2 1.2-3.1-.2-.3a9.6 9.6 0 1 1 7.3 3.7z"/>
          </svg>
          <h3 class="text-xl font-semibold">WhatsApp</h3>
          <p class="text-sm opacity-70">+1 (929) 323-5363</p>
        </div>
      </a>

      <!-- KakaoTalk -->
      <a href="https://open.kakao.com/o/sVRhDkXh" target="_blank" rel="noopener"
         class="card bg-base-200 hover:bg-base-300 transition p-6">
        <div class="flex flex-col items-center text-center space-y-2">
          <!-- Kakao icon (speech bubble) -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3C7 3 3 6.6 3 11c0 2.1 1 4 2.7 5.3L5 21l4.2-2.2c.9.2 1.8.3 2.8.3 5 0 9-3.6 9-8s-4-8-9-8z" />
          </svg>
          <h3 class="text-xl font-semibold">KakaoTalk</h3>
          <p class="text-sm opacity-70">Open Chat</p>
        </div>
      </a>
    </div>

    <!-- SOCIAL -->
    <h2 class="text-xl font-semibold mb-3 w-full max-w-5xl">Social</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full max-w-5xl">
      <!-- Instagram -->
      <a href="https://www.instagram.com/hojiny06" target="_blank" rel="noopener"
         class="card bg-base-200 hover:bg-base-300 transition p-6">
        <div class="flex flex-col items-center text-center space-y-2">
          <!-- Instagram icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke-width="2"/>
            <circle cx="12" cy="12" r="4" stroke-width="2"/>
            <circle cx="18" cy="6" r="1.5" fill="currentColor"/>
          </svg>
          <h3 class="text-xl font-semibold">Instagram</h3>
          <p class="text-sm opacity-70">@hojiny06</p>
        </div>
      </a>
    </div>

    <div class="mt-12 text-sm opacity-60 text-center">
      Thanks for visiting — I’m looking forward to hearing from you.
    </div>
  </div>
</BaseLayout>
